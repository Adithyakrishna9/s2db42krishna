extends layout

block content
  h1= title
  p Welcome to #{title}. My name is Adithya
  - let items = results
  div(class="container-fluid")
    div(class="row m-1")
      each heroines, index in items
        - let destination = `dispatch(\"/heroines/update?id=${heroines._id}\")`
        - let destination1 = `dispatch(\"/heroines/detail?id=${heroines._id}\")`
        - let destination2 = `dispatch(\"/heroines/delete?id=${heroines._id}\")`
        div(class="row-sm-2", class="m-1" onclick=`buy(${index+1})`) #{heroines.heroine_name} - #{heroines.heroine_color} - $#{heroines.heroine_cost}
         button.btn( class="btn-primary ml-1", onclick= destination) Update
         button.btn( class="btn-info ml-1", onclick= destination1) Detail
         button.btn( class="btn-danger ml-1", onclick= destination2) Delete

  script.
    function buy(index){
      alert(`You purchased item ${index}`);
    }

    function dispatch(path){
      window.location.href=path
    }


